<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="44dp">

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textColor="@color/dark_text_color"
                android:textSize="18sp"
                android:maxWidth="150dp"
                android:singleLine="true" />

            <binaryblitz.athleteapp.Custom.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView8"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginLeft="6dp"
                android:singleLine="true" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9"
            android:layout_gravity="left|top"
            android:textColor="@color/accent_color"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="68dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp">

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:textColor="@color/grey_text_color"
                android:textStyle="bold"
                android:background="@drawable/date_text_border_back"
                android:gravity="center"
                android:textSize="14sp"
                android:textIsSelectable="false"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#b6b6b6"></FrameLayout>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageView14"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/info_btn"
            android:layout_marginRight="16dp"
            android:padding="10dp" />
    </FrameLayout>

</FrameLayout>