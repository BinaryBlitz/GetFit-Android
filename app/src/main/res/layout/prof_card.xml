<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:elevation="2dp"
    android:padding="0dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:cardBackgroundColor="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop" />

            <com.github.siyamed.shapeimageview.CircularImageView
                app:siBorderWidth="3dp"
                app:siBorderColor="#ffffff"
                android:id="@+id/profile_image"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="6dp" />

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="16dp"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="6dp"
                android:id="@+id/follow_btn">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/imageView6"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="6dp" />

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="FOLLOW"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/accent_color"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="128dp"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center"
                    android:src="@drawable/send_ic"
                    android:padding="8dp"
                    android:layout_marginLeft="2dp" />
            </FrameLayout>
        </FrameLayout>

        <binaryblitz.athleteapp.Custom.BoldRobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:textColor="@color/dark_text_color"
            android:textStyle="bold" />

        <binaryblitz.athleteapp.Custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_text_color"
            android:textSize="18sp"
            android:typeface="sans" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="150dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:id="@+id/imageView3"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/star_ic"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView3"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:textColor="@color/dark_text_color"
                    android:textSize="22sp"
                    android:textIsSelectable="false"
                    android:layout_marginRight="4dp" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="right"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_toLeftOf="@+id/textView3"
                    android:layout_toStartOf="@+id/textView3"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/follower_ic" />

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView4"
                    android:layout_gravity="right"
                    android:textColor="@color/dark_text_color"
                    android:textSize="22sp"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toStartOf="@+id/imageView4"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="140dp"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="16dp"
                android:textColor="@color/grey_text_color"
                android:textStyle="bold"
                android:background="@drawable/date_text_border_back"
                android:gravity="center"
                android:textSize="14sp"
                android:textIsSelectable="false" />
        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>