<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f1f1f1">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:background="#e1e1e1">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primary_color"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/test1"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/white_gradient">

                    </FrameLayout>

                    <com.github.siyamed.shapeimageview.CircularImageView
                        app:siBorderWidth="3dp"
                        app:siBorderColor="#ffffff"
                        android:id="@+id/profile_image"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/evgen"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="6dp" />

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/blue_border"
                        android:layout_marginBottom="6dp">

                        <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="EDIT"
                            android:id="@+id/textView6"
                            android:layout_gravity="center"
                            android:textColor="@color/accent_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </FrameLayout>

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Efanov Evgeniy"
                    android:id="@+id/textView"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_text_color"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp" />

                <binaryblitz.athleteapp.Custom.RobotoTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Who has taken an extended leave of absence from training? Who has taken an extended leave of absence from training? "
                    android:id="@+id/textView2"
                    android:textColor="@color/dark_text_color"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:background="#ffffff"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="44dp" />

            </LinearLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                android:minHeight="?attr/actionBarSize">
                <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/action_bar">

                    <ImageView
                        android:id="@+id/drawer_indicator"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_gravity="start"
                        android:padding="15dp"
                        android:src="@drawable/drawer_selector" />

                    <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="My Profile"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/date_text_view"
                        android:textAllCaps="false"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textSize="20sp"
                        android:textColor="@color/dark_text_color"
                        android:layout_marginLeft="60dp" />

                    <ImageView
                        android:id="@+id/drawer_indicator_end"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_gravity="end"
                        android:padding="15dp"
                        android:src="@drawable/more_ic" />

                </FrameLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:tabMode="fixed"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabGravity="center"
        app:tabMinWidth="128dp"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabSelectedTextColor="@color/dark_text_color"
        app:tabTextColor="@color/grey_text_color"
        app:tabIndicatorColor="@color/dark_text_color"
        app:tabIndicatorHeight="0dp"
        android:gravity="bottom"
        android:background="#e1e1e1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"
        android:background="#e1e1e1">
    </android.support.v4.view.ViewPager>


</android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/meny_layout" />
    </android.support.v4.widget.DrawerLayout>