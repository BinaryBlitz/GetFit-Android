<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="135dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:id="@+id/container">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="54dp">

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/type"
                android:textStyle="bold"
                android:textColor="@color/dark_text_color"
                android:textSize="18sp" />

            <binaryblitz.athleteapp.Custom.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/count"
                android:textSize="18sp"
                android:textColor="@color/dark_text_color"
                android:layout_marginLeft="6dp" />
        </LinearLayout>

        <binaryblitz.athleteapp.Custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/name"
            android:layout_gravity="left|top"
            android:textColor="@color/accent_color"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="94dp">

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/date"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/grey_back"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="14sp"
                android:textIsSelectable="false" />

            <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/time"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:textColor="@color/grey_text_color"
                android:textStyle="bold"
                android:background="@drawable/date_text_border_back"
                android:gravity="center"
                android:textSize="14sp"
                android:textIsSelectable="false"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#b6b6b6"></FrameLayout>
    </FrameLayout>

</FrameLayout>