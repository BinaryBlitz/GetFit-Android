<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:id="@+id/user">

        <com.github.siyamed.shapeimageview.CircularImageView
            app:siBorderWidth="2dp"
            app:siBorderColor="#ffffff"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/avatar"
            android:layout_gravity="center_vertical|left"
            android:scaleType="center" />

        <binaryblitz.athleteapp.Custom.BoldRobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/user_text"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:textColor="#212121"
            android:singleLine="true"
            android:layout_marginRight="80dp" />

        <binaryblitz.athleteapp.Custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/date_text"
            android:layout_gravity="right|center_vertical"
            android:textSize="12sp"
            android:layout_marginRight="16dp" />

    </FrameLayout>

    <binaryblitz.athleteapp.Custom.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/comment_text"
        android:layout_gravity="left|top"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#212121"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="?android:selectableItemBackground"
        android:id="@+id/delete_btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/remove_btn"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_action_remove_black"
            android:padding="7dp" />

        <binaryblitz.athleteapp.Custom.BoldRobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/delete_str"
            android:id="@+id/textView24"
            android:textColor="#727272"
            android:textSize="12sp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#b6b6b6"></FrameLayout>
</LinearLayout>