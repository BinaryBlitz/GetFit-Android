<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:id="@+id/container">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imageView2"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_gradient"></FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        app:siBorderWidth="1dp"
                        app:siBorderColor="#ffffff"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:id="@+id/imageView"
                        android:layout_gravity="left|center_vertical" />

                    <binaryblitz.athleteapp.Custom.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textViewfdfd"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="48dp"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/blue_border"
                    android:layout_marginBottom="6dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView6"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/accent_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_text_color"
                    android:textStyle="bold"
                    android:layout_marginRight="88dp" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">

                <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_color"
                    android:textSize="18sp" />

                <binaryblitz.athleteapp.Custom.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView8"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:layout_marginLeft="6dp" />
            </LinearLayout>

            <binaryblitz.athleteapp.Custom.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/dark_text_color"
                android:textSize="18sp"
                android:typeface="sans" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="150dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:id="@+id/imageView3"
                        android:layout_gravity="end"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/star_ic"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp" />

                    <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView3"
                        android:layout_gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:layout_toStartOf="@+id/imageView3"
                        android:textColor="@color/dark_text_color"
                        android:textSize="22sp"
                        android:textIsSelectable="false"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:id="@+id/imageView4"
                        android:layout_gravity="right"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_toLeftOf="@+id/textView3"
                        android:layout_toStartOf="@+id/textView3"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/follower_ic" />

                    <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView4"
                        android:layout_gravity="right"
                        android:textColor="@color/dark_text_color"
                        android:textSize="22sp"
                        android:layout_toLeftOf="@+id/imageView4"
                        android:layout_toStartOf="@+id/imageView4"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#e1e1e1"></FrameLayout>

        </LinearLayout>
    </ScrollView>



        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/primary_color"
                android:minHeight="?attr/actionBarSize">
                <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/action_bar"
                    android:background="@color/primary_color">

                    <ImageView
                        android:id="@+id/drawer_indicator"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="@drawable/drawer_selector"
                        android:layout_gravity="start"
                        android:src="@drawable/back_black_ic"
                        android:padding="15dp" />

                    <binaryblitz.athleteapp.Custom.BoldRobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Program"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/date_text_view"
                        android:textAllCaps="false"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textSize="20sp"
                        android:textColor="@color/dark_text_color"
                        android:layout_marginLeft="60dp" />

                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </FrameLayout>